{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "module": "ESNext",
    "target": "esnext",
    "types": ["@types/wicg-file-system-access"]
  }
}
